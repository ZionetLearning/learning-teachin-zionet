{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "[yyyy-MM-dd HH:mm:ss.fff] "
      }
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4000",
      "http://localhost:4001",
      "http://localhost:4002",
      "https://localhost:4000",
      "https://localhost:4001",
      "https://localhost:4002",
      "https://admin.teachin.cloudns.pro",
      "https://teacher.teachin.cloudns.pro",
      "https://student.teachin.cloudns.pro"
    ]
  },
  "Ai": {
    "DefaultTtlSeconds": 60
  },
  "ServiceBus": {
    "ConnectionString": "Endpoint=sb://sbemulatorns:5672/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=SAS_KEY_VALUE;UseDevelopmentEmulator=true;"
  },
  "SignalR": {
    "ConnectionString": ""
  },
  "Jwt": {

    "Secret": "",
    "Issuer": "manager",
    "Audience": "client-app",
    "RefreshTokenHashKey": ""

  },

  "Avatars": {
    "StorageConnectionString": "UseDevelopmentStorage=true",
    "Container": "avatars",
    "UploadUrlTtlMinutes": 5,
    "ReadUrlTtlMinutes": 15,
    "MaxBytes": 5242880,
    "AllowedContentTypes": [ "image/jpeg", "image/png", "image/webp" ]
  },
  "RateLimiting": {
    "RefreshToken": {
      "PermitLimit": 5,
      "WindowMinutes": "00:01:00",
      "QueueLimit": 0,
      "RejectionStatusCode": 429
    }
  },
  "AllowedHosts": "*"
}