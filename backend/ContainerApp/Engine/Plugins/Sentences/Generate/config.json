{
  "type": "prompt",
  "template_format": "semantic-kernel",
  "description": "Generate Hebrew sentences as strict JSON",
  "input_variables": [
    {
      "name": "difficulty",
      "description": "easy|medium|hard",
      "is_required": true
    },
    {
      "name": "nikud",
      "description": "true|false",
      "is_required": true
    },
    {
      "name": "count",
      "description": "number > 0",
      "is_required": true
    },
    {
      "name": "hints",
      "description": "Comma-separated Hebrew words without niqqud",
      "is_required": true
    },
    {
      "name": "interest",
      "description": "User's topic of interest (optional)",
      "is_required": false
    }
  ]
}