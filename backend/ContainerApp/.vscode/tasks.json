{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker-compose-debug-up",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "-f", "docker-compose.yml",
        "-f", "docker-compose.debug.yml",
        "up", "-d", "--build"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "presentation": {
        "echo": true, "reveal": "always", "focus": false,
        "panel": "shared", "showReuseMessage": true, "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "docker-compose-debug-down",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "-f", "docker-compose.yml",
        "-f", "docker-compose.debug.yml",
        "down", "--remove-orphans", "-v"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "presentation": {
        "echo": true, "reveal": "always", "focus": false,
        "panel": "shared", "showReuseMessage": true, "clear": false
      },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "docker-compose-debug-logs",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "-f", "docker-compose.yml",
        "-f", "docker-compose.debug.yml",
        "logs", "-f", "--tail", "100"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "test",
      "presentation": {
        "echo": true, "reveal": "always", "focus": true,
        "panel": "shared", "showReuseMessage": true, "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "docker-compose-debug-rebuild",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "-f", "docker-compose.yml",
        "-f", "docker-compose.debug.yml",
        "up", "-d", "--build", "--force-recreate"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "presentation": {
        "echo": true, "reveal": "always", "focus": false,
        "panel": "shared", "showReuseMessage": true, "clear": false
      },
      "problemMatcher": []
    }
  ]
}
